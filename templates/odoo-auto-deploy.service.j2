[Unit]
Description=Auto-deploy Odoo recette on branch update
After=network.target

[Service]
Type=oneshot
User={{ odoo_username }}
Group={{ odoo_username }}
WorkingDirectory=/home/{{ odoo_username }}/
ExecStart=/home/{{ odoo_username }}/scripts/odoo-auto-deploy

[Install]
WantedBy=multi-user.target
